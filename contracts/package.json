{
  "name": "pqe-cash-contracts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:v2:local": "POOL_VERSION=v2 hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:v2:sepolia": "POOL_VERSION=v2 hardhat run scripts/deploy.js --network sepolia",
    "preflight:sepolia": "hardhat run scripts/sepolia-preflight.js --network sepolia",
    "release:v2:sepolia": "POOL_VERSION=v2 DEPLOY_OUTPUT=deployments/sepolia-v2.latest.json hardhat run scripts/deploy.js --network sepolia",
    "rotate:verifier": "hardhat run scripts/rotate-verifier.js --network localhost"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.1.0",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.17"
  }
}
